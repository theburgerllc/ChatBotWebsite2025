# Application URLs
NEXT_PUBLIC_BASE_URL=https://your-domain.vercel.app
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Tavus API Configuration
TAVUS_API_KEY=your_tavus_api_key_here

# Tavus Persona IDs (for different verticals)
# Note: Each vertical needs both a PERSONA_ID and REPLICA_ID from your Tavus dashboard
# To obtain these IDs:
# 1. Log into your Tavus account at https://platform.tavus.io
# 2. Navigate to Personas section to get PERSONA_ID for each vertical
# 3. Navigate to Replicas section to get REPLICA_ID for each vertical

# Healthcare vertical configuration
TAVUS_PERSONA_ID_HEALTHCARE=your_healthcare_persona_id
TAVUS_REPLICA_ID_HEALTHCARE=your_healthcare_replica_id

# Legal vertical configuration
TAVUS_PERSONA_ID_LEGAL=your_legal_persona_id
TAVUS_REPLICA_ID_LEGAL=your_legal_replica_id

# E-commerce vertical configuration
TAVUS_PERSONA_ID_ECOMMERCE=your_ecommerce_persona_id
TAVUS_REPLICA_ID_ECOMMERCE=your_ecommerce_replica_id

# General vertical configuration (REQUIRED for main demo button)
TAVUS_PERSONA_ID_GENERAL=your_general_persona_id
TAVUS_REPLICA_ID_GENERAL=your_general_replica_id

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Price IDs
STRIPE_PRICE_STARTER=price_your_starter_price_id
STRIPE_PRICE_GROWTH=price_your_growth_price_id

# Stripe Webhook Secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Promotion Codes
STRIPE_PROMO_STARTER=promo_your_starter_promo_code
STRIPE_PROMO_GROWTH=promo_your_growth_promo_code

# Stripe Portal
STRIPE_PORTAL_RETURN_URL=https://your-domain.vercel.app

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your-email@domain.com
SENDGRID_TO_EMAIL=notifications@domain.com

# Admin Panel Authentication (replaced by BASIC_AUTH_*)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=your_secure_password_here

# Webhook Admin Viewer Authentication
TAVUS_WEBHOOK_BASIC_USER=webhook_admin
TAVUS_WEBHOOK_BASIC_PASS=your_webhook_admin_password_here

# Webhook Security
TAVUS_WEBHOOK_SECRET=your_webhook_secret_here

# Tavus Additional Configuration
# Default conversation time-to-live in seconds (1 hour)
TAVUS_DEFAULT_CONVERSATION_TTL=3600

# Client-side Configuration
# Maximum retry attempts for failed requests
NEXT_PUBLIC_MAX_RETRIES=3

# Tavus CVI Library Configuration
# Optional: API key for client-side CVI components
NEXT_PUBLIC_TAVUS_API_KEY=your_tavus_api_key_here

# Rate Limiting Configuration
# Requests per minute per IP (default: 5)
RATE_LIMIT_PER_MINUTE=5

# Webhook Timestamp Tolerance (seconds, default: 300 = 5 minutes)
WEBHOOK_TIMESTAMP_TOLERANCE=300

# Analytics Configuration
NEXT_PUBLIC_POSTHOG_KEY=phk_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_KEY=phk_your_server_posthog_key_here
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Runtime Configuration
NODE_VERSION=20

