# Application URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Tavus API Configuration
# Get your API key from https://tavus.io/dashboard/api-keys
TAVUS_API_KEY=your_tavus_api_key_here

# Tavus Persona and Replica IDs for each vertical
# Create personas at https://tavus.io/dashboard/personas
TAVUS_PERSONA_ID_HEALTHCARE=your_healthcare_persona_id
TAVUS_REPLICA_ID_HEALTHCARE=your_healthcare_replica_id
TAVUS_PERSONA_ID_LEGAL=your_legal_persona_id
TAVUS_REPLICA_ID_LEGAL=your_legal_replica_id
TAVUS_PERSONA_ID_ECOMMERCE=your_ecommerce_persona_id
TAVUS_REPLICA_ID_ECOMMERCE=your_ecommerce_replica_id
TAVUS_PERSONA_ID_GENERAL=your_general_persona_id
TAVUS_REPLICA_ID_GENERAL=your_general_replica_id

# Stripe Configuration
# Get keys from https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Stripe Product/Price IDs
# Create products at https://dashboard.stripe.com/test/products
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_GROWTH=price_...

# Stripe Webhook Secret
# Get from https://dashboard.stripe.com/test/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Promotion Codes (optional)
STRIPE_PROMO_STARTER=promo_...
STRIPE_PROMO_GROWTH=promo_...

# Stripe Customer Portal
STRIPE_PORTAL_RETURN_URL=https://yourdomain.com

# Admin Panel Authentication
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=your_secure_password_here

# SendGrid Email Configuration
# Get API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG....
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
LEADS_NOTIFICATION_EMAIL=leads@yourdomain.com

# Analytics (optional)
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog Analytics
POSTHOG_KEY=phc_xxxxxxxxxxxx
POSTHOG_HOST=https://app.posthog.com
